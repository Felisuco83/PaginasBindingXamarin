<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.Views.BindingObjectsView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label FontSize="50" Text="Binding objects" VerticalOptions="Start"/>
            <Entry Placeholder="Introduzca texto" FontSize="15" HorizontalOptions="FillAndExpand" x:Name="cajatexto"/>
            <Label FontSize="30" TextColor="Blue" BindingContext="{x:Reference cajatexto}" Text="{Binding Path=Text}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>